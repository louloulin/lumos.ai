{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "lib": ["ES2022", "DOM"],
    "types": ["bun-types"]
  },
  "include": ["src/**/*", "examples/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
} 